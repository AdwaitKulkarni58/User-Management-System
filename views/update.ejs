<%- include("header") %>
<main id="main-site">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/">All Users</a>
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">Update User</h2>
      <span class="text-dark">Update the details of an existing user.</span>
    </div>
    <form id="update_user" method="POST">
      <div class="new_user">
        <div class="form-group">
          <label for="name" class="text-dark"> Name </label>
          <input type="hidden" name="id" value="" />
          <input type="text" name="name" value="" placeholder="name" />
        </div>
        <div class="form-group">
          <label for="Email" class="text-dark"> Email</label>
          <input type="text" name="name" value="" placeholder="email" />
        </div>
        <div class="form-group">
          <label for="gender" class="text-dark"> Gender </label>
          <div class="radio inline">
            <input type="radio" id="male-radio" name="gender" value="male" />
            <label for="male-radio" class="text-dark"> Male </label>
          </div>
          <div class="radio inline">
            <input
              type="radio"
              id="female-radio"
              name="gender"
              value="female"
            />
            <label for="female-radio" class="text-dark"> Female </label>
          </div>
        </div>
        <div class="form-group">
          <label for="status" class="text-dark"> Status </label>
          <div class="radio inline">
            <input
              type="radio"
              id="active-radio"
              name="status"
              value="active"
            />
            <label for="active-radio" class="text-dark"> Active </label>
          </div>
          <div class="radio inline">
            <input
              type="radio"
              id="inactive-radio"
              name="status"
              value="inactive"
            />
            <label for="inactive-radio" class="text-dark"> Inactive </label>
          </div>
        </div>
        <div class="form-group">
          <button type="submit" class="btn text-dark update">Add</button>
        </div>
      </div>
    </form>
  </div>
</main>
<%- include("footer") %>
